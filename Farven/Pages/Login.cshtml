@page
@model Farven.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="form-group">
        <label>Nome de usuário</label>
        <input type="text" asp-for="Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Senha</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<div class="form-group text-center mt-3">
    <p class="register-link">
        Não tem uma conta? <a asp-page="/Register">Registre-se aqui</a>.
    </p>
</div>

@if (Model.LoginFailed)
{
    <div class="form-group text-center mt-3">
        <p class="forgot-password-link">
            Esqueceu sua senha? <a asp-page="/ForgotPassword">Redefinir senha</a>.
        </p>
    </div>
}