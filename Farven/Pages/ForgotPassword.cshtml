@page
@model Farven.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueci a Senha";
}

<h2>Esqueci a Senha</h2>

<form method="post">
    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }

    <div class="form-group">
        <label>E-mail</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Enviar link de redefinição</button>
</form>