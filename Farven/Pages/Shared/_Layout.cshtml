<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Farven</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Farven.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/Images/Farven.ico" />
</head>
<body class="d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/Farven.png" alt="Farven Logo" class="logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Página Inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/History">Histórico de Cotações</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Olá, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li><a class="dropdown-item" asp-page="/Profile">Perfil</a></li>
                                    <li><a class="dropdown-item" asp-page="/UserHistory">Histórico de Conversões</a></li>
                                    <li><a class="dropdown-item" asp-page="/Logout">Sair</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <button type="button" class="btn btn-theme nav-link" onclick="toggleTheme()">
                                    <i id="theme-icon" class="fas fa-moon"></i>
                                </button>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <button type="button" class="btn btn-theme nav-link" onclick="toggleTheme()">
                                    <i id="theme-icon" class="fas fa-moon"></i>
                                </button>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-login" asp-area="" asp-page="/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; 2024 - Farven - <a asp-area="" asp-page="/Privacy">Política de Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>