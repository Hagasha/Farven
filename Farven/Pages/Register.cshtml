@page
@model Farven.Pages.RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h2>Registrar</h2>

<form method="post">
    <div class="form-group">
        <label>Nome de usuário</label>
        <input type="text" asp-for="Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Senha</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
