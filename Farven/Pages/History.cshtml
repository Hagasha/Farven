@page
@model Farven.Pages.HistoryModel
@{
    ViewData["Title"] = "Histórico de Cotações";
}
<div class="container my-5">
    <h1 class="text-center mb-4">Histórico de Cotações</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label for="from">De:</label>
                        <select class="form-control" id="from">
                            <option value="">Selecione uma moeda</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="to">Para:</label>
                        <select class="form-control" id="to">
                            <option value="">Selecione uma moeda</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="startDate">Data de Início:</label>
                        <input type="date" class="form-control" id="startDate" />
                    </div>
                    <div class="form-group">
                        <label for="endDate">Data de Fim:</label>
                        <input type="date" class="form-control" id="endDate" />
                    </div>
                    <button class="btn btn-primary" onclick="fetchHistory()">Obter Histórico</button>
                </div>
            </div>
        </div>
    </div>
    <div id="historyResult" class="mt-4"></div>
</div>

@section Scripts {
    <script src="~/js/history.js"></script>
}